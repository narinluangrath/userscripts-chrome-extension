{
  "name": "userscripts-chrome-extension",
  "version": "0.0.1",
  "description": "Userscript manager",
  "main": "background.js",
  "author": "Narin Luangrath <narin.luangrath@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint --fix",
    "format": "pretty-quick",
    "dev:options": "parcel src/options.html",
    "dev:popup": "parcel src/popup.html",
    "build:options": "parcel build src/options.html",
    "build:popup": "parcel build src/popup.tsx",
    "build:ts": "parcel build src/background.ts && parcel build src/content.ts",
    "compile": "rm -rf dist/* && yarn build:options && yarn build:popup && yarn build:ts && cp -r manifest.json src/icons dist",
    "storybook": "start-storybook -p 6006",
    "test": "jest src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --staged",
      "pre-push": "yarn lint && yarn format"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/react": "^6.0.21",
    "@types/chrome": "^0.0.123",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "css-loader": "^4.3.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.3.0",
    "@storybook/preset-scss": "^1.0.2",
    "isomorphic-git": "^1.7.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "userscript-meta": "^1.0.1"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "notes": {
    "browserslist": "https://flaviocopes.com/parcel-regeneratorruntime-not-defined/",
    "parcel-bundler": "https://github.com/parcel-bundler/parcel/issues/39#issuecomment-443061650",
    "font": "https://fonts.google.com/specimen/Rubik?preview.size=16&vfonly=true&selection.family=Rubik:wght@300;400;500#standard-styles",
    "font-injection": "https://stackoverflow.com/questions/12015074/adding-font-face-stylesheet-rules-to-chrome-extension"
  }
}
